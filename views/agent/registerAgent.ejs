<%- include('../partials/header') -%>
    <title>Register</title>
</head>
<body>
    <nav class="navbar bg-success">
        <form class="container-fluid justify-content-start">
            <button class="btn bg-warning btn-outline-success me-2" type="button"><a class="dropdown-item" href="/agent/login">Login</a></button>
            <div class="dropdown">
                <button class="btn bg-warning btn-outline-success me-2" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Register
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/customer/register">User</a></li>
                    <li><a class="dropdown-item" href="/vendor/register">Vendor</a></li>
                    <li><a class="dropdown-item" href="/agent/register">Delivery Agent</a></li>
                    <li><a class="dropdown-item" href="/admin/register">Admin</a></li>
                </ul>
            </div>
        </form>
    </nav>
    <form style="display: block; margin:3rem 5rem;" method="post">
        <center>
            <h1 style="font-family: cursive;"><u>Hello Delivery Agent</u></h1>
            <h4>Register your account with us and let's grow together.</h4>
            <h5 style="border-bottom: 2px dashed black;">"DO REMEMBER, TIME IS MONEY"</h5>
        </center>
        <div class="mb-2">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-2">
            <label for="govtid" class="form-label">Government Id/ GSTIN</label>
            <input type="text" class="form-control" id="govtid" name="govtid">
        </div>
        <div class="mb-2">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="mb-2">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mb-2">
            <label for="password2" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="password2" name="password2">
        </div>
        <div class="mb-2">
            <label for="contact" class="form-label">Contact</label>
            <input type="number" class="form-control" id="contact" name="contact">
        </div>
        <div class="mb-2">
            <label for="state" class="form-label">State</label>
            <input type="text" class="form-control" id="state" name="state">
        </div>
        <div class="mb-2">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" name="city">
        </div>
        <button type="submit" class="btn btn-primary" style="margin-bottom: 3rem;">Submit</button>
      </form>

<%- include('../partials/footer') -%>