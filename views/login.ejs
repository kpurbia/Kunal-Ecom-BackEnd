<%- include('partials/header') -%>
    <title>Login Page</title>
</head>
<body>
    <nav class="navbar bg-success">
        <form class="container-fluid justify-content-start">
            <button class="btn bg-warning btn-outline-success me-2" type="button"><a class="dropdown-item" href="/login">Login</a></button>
            <div class="dropdown">
                <button class="btn bg-warning btn-outline-success me-2" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Register
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/customer/register">User</a></li>
                    <li><a class="dropdown-item" href="/vendor/register">Vendor</a></li>
                    <li><a class="dropdown-item" href="/agent/register">Delivery Agent</a></li>
                    <li><a class="dropdown-item" href="/admin/register">Admin</a></li>
                </ul>
            </div>
        </form>
    </nav>
    <form style="display: block; margin:3rem 5rem;" method="post">
        <center>
            <h1 style="font-family: cursive;"><u>Hello User</u></h1>
        </center>
        <div class="mb-2">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email">
          </div>
        <div class="mb-2">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</body>
<%- include('partials/footer') -%>